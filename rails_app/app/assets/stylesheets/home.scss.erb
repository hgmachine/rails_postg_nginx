/* Arquivo de estilo */

* { margin: 0; padding: 0; box-sizing: border-box; text-decoration: none; }

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');

img { max-width: 100%; }

body {
	margin: 0;
	width: 100%;
  height: 100%;
	background-color: black;
	font-size: 1vw;
	overflow-x: hidden;
	font-family: 'Poppins', sans-serif;
  color: white;
}

.landing-page-dobra {
  position: relative;
  display: inline-block;
}

.btn {
	font-size: 1.5em;
	font-weight: 900;
	background-color: #fdb55c;
	color: black;
	width: 100%;
}

.btn2 {
	font-size: 2em;
	background-color: #fdb55c;
	color: black;
	font-weight: 400;
	width: 50%;
}

// Timer

#countdown {
  width: 100%;
	padding-top: 2%;
}

#countdown-2 {
  width: 100%;
	padding-top: 2%;
}

label {
  clear: both;
  display: block;
}

.contador {
	margin-top: 5%;
	margin-bottom: 8%;
}

#countdown span {
  background: rgba(0,0,0,0);
  color: #000;
  font-size: 26px;
  font-weight: normal;
  text-align: center;
  width: 25%;
  dispaly: block;
  float: left;
  color: white;
  font-size: 1em;
  font-weight: 800;
}

#countdown-2 span {
  background: rgba(0,0,0,0);
  color: #000;
  font-size: 26px;
  font-weight: normal;
  text-align: center;
  width: 25%;
  dispaly: block;
  float: left;
  color: white;
  font-size: 1em;
  font-weight: 800;
}

